{
  "apps": [
    {
      "name": "bulldozer",
      "script": "bin/www",
      "args": [],
      "watch": false,
      "ignore_watch": [
        ".git",
        "node_modules",
        "logs",
        ".gitignore"
      ],
      "watch_options": {
        "followSymlinks": false
      },
      "node_args": "--harmony",
      "min_uptime": "120s",
      "max_restarts": 10,
      "merge_logs": false,
      "cwd": "/root/git/spider-server",
      "log_date_format": "YYYY-MM-DD HH:mm:ss.SSS",
      "instances": 2,
      "env": {
        "NODE_CONFIG_DIR": "./config",
        "PORT" : 9966,
        "NODE_ENV": "production"
      },
      "env_dev": {
        "NODE_CONFIG_DIR": "./config",
        "NODE_ENV": "development"
      }
    }
  ]
}
